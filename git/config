[branch]
	# Sort commits by committer date
        sort = -committerdate
[column]
	# Put list items in columns
	ui = auto
[color]
	# Use color when we can
	ui = auto
[commit]
	# Show commit diff in commit message editor
	verbose = true
[core]
	excludesFile = ~/.config/git/ignore_global
[diff]
	# Nicer diffs
	algorithm = histogram
	# Colour lines that were only moved differently
	colorMoved = plain
	# Show where diffs some from (e.g. index) in diff prefix.
	mnemonicPrefix = true
[init]
	defaultBranch = master
[rebase]
	# Automatically stash/unstash changes when rebasing
	autoStash = true
	# Update local branches when a child is moved in a rebase
	updateRefs = true
	# When rebasing, automatically squash 'fixup!' commits
	autoSquash = true
[include]
	path = ~/.config/git/aliases
	path = ~/.gitconfig_local
[push]
	recurseSubmodules = on-demand
[submodule]
	recurse = true
